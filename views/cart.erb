<h2>Ваша корзина</h2>

<%= @items.inspect %>

<table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Price</th>
          <th>Qty</th>
        </tr>
      </thead>
      <tbody>

      <% i = 0 %>
      <% @items.each do |item| %>
        <% i += 1 %>  
        <tr>
          <th scope="row"><%= i %></th>
          <td><%= item[0].title %></td>
          <td>Otto</td>
          <td>@mdo</td>
        </tr>
      <% end %>  
      
      </tbody>
    </table>
