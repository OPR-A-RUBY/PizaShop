<h2>Ваша корзина</h2>

<%= @items.inspect %>

<table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Price</th>
          <th>Qty</th>
        </tr>
      </thead>
      <tbody>

      <% total_money = 0 %>
      <% total_qty = 0 %>
      <% i = 0 %>
      <% @items.each do |item| %>
        <% i += 1 %>  
        <tr>
          <th scope="row"><%= i %></th>
          <td><%= item[0].title %></td>
          <td><%= item[0].price %></td>
          <td><%= item[1] %></td>
        </tr>
        <% total_money += item[0].price * item[1].to_i %>
        <% total_qty += item[1].to_i %>
      <% end %>  
        <tr>
          <th></th>
          <td><b>TOTAL : </b></td>
          <td><b><%= total_money %></b></td>
          <td><b><%= total_qty %></b></td>
        </tr>
        
      </tbody>
    </table>
