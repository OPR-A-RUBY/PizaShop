
<h2 class="text-center">Welcome to Pizza Shop!</h2>

<div class="row">
    <% @product.each do |p| %>
    <div class="col-md-3 col-sm-4"> 
        <div>
            <h3 class="text-center"><%= p.title %></h3>
        </div>
        <div>
            <img src=" <%= p.path_of_image %> " width=200  />
        </div>
        <div>
            <ins>Размер <%= p.size %> см.</ins>
        </div>
        <div>
            <h4 class="text-right">Цена <b><%= p.price %></b> рублей.</h4>
        </div>
        <div>
            <em><%= p.discription %></em>
        </div>
        <div>
            <!-- Indicates a successful or positive action -->
            <button type="button" class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)"> Добавить в корзину </button>
        </div>
    </div>
    <% end %>
</div>

<br />
