<h3>Welcome to Pizza Shop!</h3>

<div class="row">
    <% @product.each do |p| %>
    <div class="col-md-3"> 
        <div>
            <%= p.title %>
        </div>
        <div>
            <img src=" <%= p.path_of_image %> " width=150  />
        </div>
        <div>
            Цена <%= p.price %> рублей.
        </div>
        <div>
            Разиер <%= p.size %> см.
        </div>
        <div>
            <%= p.discription %>
        </div>
        <div>
            <!-- Indicates a successful or positive action -->
            <button type="button" class="btn btn-sm btn-success"> Добавить к корзину </button>
        </div>
    </div>
    <% end %>
</div>

